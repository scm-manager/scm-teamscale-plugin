{
  "scm-teamscale-plugin": {
    "pullRequest": {
      "findings": "Teamscale"
    },
    "config": {
      "link": "Teamscale",
      "title": "Teamscale",
      "form": {
        "url": "Instance URL",
        "urlHelptext": "URL of Teamscale instance.",
        "disableRepositoryConfiguration": "Do not allow repository configuration.",
        "disableRepositoryConfigurationHelptext": "Do not allow repository owners to configure teamscale."
      }
    }
  },
  "permissions": {
    "repository": {
      "teamscale": {
        "*": {
          "displayName": "Modify repository specific Teamscale configuration",
          "description": "May modify the repository specific Teamscale configuration for all repositories"
        }
      }
    },
    "configuration": {
      "read,write": {
        "teamscale": {
          "displayName": "Modify global Teamscale configuration",
          "description": "May modify the global Teamscale configuration"
        }
      }
    }
  },
  "verbs": {
    "repository": {
      "teamscale": {
        "displayName": "configure Teamscale",
        "description": "May modify the repository specific Teamscale configuration"
      }
    },
    "configuration": {
      "read,write": {
        "teamscale": {
          "displayName": "configure Teamscale",
          "description": "May modify the global Teamscale configuration"
        }
      }
    }
  }
}
